
@{
    Layout = "_Dashboard";
}

@model List<admin>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">🔧 Update Admin Profile</h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["msg"]
                        </div>
                    }

                    <form method="post">
                        <!-- Hidden ID -->
                        <input type="hidden" name="Admin_id" value="@Model[0].Admin_id" />

                        <div class="form-group">
                            <label class="font-weight-bold">Full Name</label>
                            <input type="text" name="Admin_name" class="form-control form-control-lg"
                                   placeholder="Enter full name" value="@Model[0].Admin_name" />
                        </div>

                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Email Address</label>
                            <input type="email" name="Admin_email" class="form-control form-control-lg"
                                   placeholder="Enter email" value="@Model[0].Admin_email" />
                        </div>

                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Password</label>
                            <input type="password" name="Admin_pwd" class="form-control form-control-lg"
                                   placeholder="Enter new password" value="@Model[0].Admin_pwd" />
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-save mr-2"></i> Edit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
