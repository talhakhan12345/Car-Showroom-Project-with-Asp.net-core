            </div>
          </div>
        </div>
      </div>
    </div>


<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12 featured-top">
                <div class="row no-gutters">
                    <!-- Left Side: Car Search Filter -->
                    <div class="col-md-4 d-flex align-items-center">
                        <form asp-action="Inventory" method="get" class="request-form ftco-animate bg-primary text-white p-4 rounded">
                            <h2 class="mb-4">Find Your Perfect Car</h2>

                            <div class="form-group">
                                <label for="search" class="label">Search by Name or Stock #</label>
                                <input type="text" id="search" name="search" class="form-control" placeholder="e.g. Honda Civic, STK1234"
                                       style="color: #212529 !important; background-color: #ffffff !important;">
                            </div>

                            <div class="form-group">
                                <label for="year" class="label">Year</label>
                                <select id="year" name="year" class="form-control" style="color: #212529 !important; background-color: #ffffff !important;">
                                    <option value="">All Years</option>
                                    @for (int y = 2025; y >= 2005; y--)
                                    {
                                        <option value="@y">@y</option>
                                    }
                                </select>
                            </div>

                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="make" class="label">Make</label>
                                    <select id="make" name="make" class="form-control" style="color: #212529 !important; background-color: #ffffff !important;">
                                        <option value="">All Makes</option>
                                        <option>Acura</option>
                                        <option>Audi</option>
                                        <option>BMW</option>
                                        <option>Buick</option>
                                        <option>Cadillac</option>
                                        <option>Chevrolet</option>
                                        <option>Chrysler</option>
                                        <option>Dodge</option>
                                        <option>Ford</option>
                                        <option>GMC</option>
                                        <option>Honda</option>
                                        <option>Hyundai</option>
                                        <option>Infiniti</option>
                                        <option>Jeep</option>
                                        <option>Kia</option>
                                        <option>Lexus</option>
                                        <option>Mazda</option>
                                        <option>Mercedes-Benz</option>
                                        <option>Nissan</option>
                                        <option>Subaru</option>
                                        <option>Toyota</option>
                                        <option>Volkswagen</option>
                                        <option>Volvo</option>
                                    </select>
                                </div>
                                <div class="form-group ml-2">
                                    <label for="model" class="label">Model</label>
                                    <select id="model" name="model" class="form-control" style="color: #212529 !important; background-color: #ffffff !important;">
                                        <option value="">All Models</option>
                                        <option>3 Series</option>
                                        <option>5 Series</option>
                                        <option>A4</option>
                                        <option>A6</option>
                                        <option>Altima</option>
                                        <option>Camry</option>
                                        <option>Civic</option>
                                        <option>Corolla</option>
                                        <option>CR-V</option>
                                        <option>Elantra</option>
                                        <option>Escape</option>
                                        <option>F-150</option>
                                        <option>Fusion</option>
                                        <option>Highlander</option>
                                        <option>Impala</option>
                                        <option>Malibu</option>
                                        <option>Maxima</option>
                                        <option>Model 3</option>
                                        <option>Model S</option>
                                        <option>Mustang</option>
                                        <option>Outback</option>
                                        <option>Optima</option>
                                        <option>Passat</option>
                                        <option>Rav4</option>
                                        <option>Rogue</option>
                                        <option>Santafe</option>
                                        <option>Sonata</option>
                                        <option>Tiguan</option>
                                        <option>Traverse</option>
                                        <option>Wrangler</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="price" class="label">Price Range (USD)</label>
                                <select id="price" name="price" class="form-control" style="color: #212529 !important; background-color: #ffffff !important;">
                                    <option value="">All Prices</option>
                                    <option value="0-5000">$0 - $5,000</option>
                                    <option value="5000-10000">$5,000 - $10,000</option>
                                    <option value="10000-15000">$10,000 - $15,000</option>
                                    <option value="15000-20000">$15,000 - $20,000</option>
                                    <option value="20000-30000">$20,000 - $30,000</option>
                                    <option value="30000-40000">$30,000 - $40,000</option>
                                    <option value="40000-50000">$40,000 - $50,000</option>
                                    <option value="50000-75000">$50,000 - $75,000</option>
                                    <option value="75000-100000">$75,000 - $100,000</option>
