@{
    Layout = "_Layout";
    ViewData["Title"] = "About Us | FoxValleyLuxury";
}

@section MetaTags {
    <meta name="description" content="Learn more about FoxValleyLuxury – your trusted luxury car dealership offering premium vehicles, exceptional service, and unbeatable prices." />
    <meta name="keywords" content="About FoxValleyLuxury, Luxury cars, Car dealership, Premium vehicles, Car showroom, Trusted dealers" />
    <meta name="author" content="FoxValleyLuxury" />
    <meta property="og:title" content="About Us - FoxValleyLuxury" />
    <meta property="og:description" content="Explore the story behind FoxValleyLuxury and why we are your best choice for luxury cars." />
    <meta property="og:image" content="~/images/about-banner.jpg" />
    <meta property="og:url" content="https://foxvalleyluxury.com/about" />
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/car-8.jpg'); min-height: 450px; height: 450px; max-height: 560px; background-size: cover; background-position: center; overflow: hidden; position: relative;" data-stellar-background-ratio="0.5">

    <!-- Dark Overlay -->
    <div class="overlay" style="background-color: rgba(0, 0, 0, 0.5); position: absolute; inset: 0; z-index: 1;"></div>

    <div class="container" style="position: relative; z-index: 2;">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs" style="color: #f8f9fa; font-weight: 500; text-shadow: 1px 1px 2px rgba(0,0,0,0.6);">
                    <span class="mr-2">
                        <a href="@Url.Action("Index", "Website")" style="color: #f8f9fa;">Home <i class="ion-ios-arrow-forward"></i></a>
                    </span>
                    <span style="color: #f8f9fa;">Cars <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread" style="color: #fff; font-weight: 800; font-size: 48px; text-shadow: 2px 2px 4px rgba(0,0,0,0.6);">
                    Who We Are
                </h1>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5">
                <img src="../images/car-6.jpg" class="img-fluid rounded shadow" alt="About FoxValleyLuxury" />
            </div>
            <div class="col-lg-6">
                <h2 class="mb-4 text-primary">Your Journey to Luxury Begins Here</h2>
                <p><strong>FoxValleyLuxury</strong> is more than just a car dealership — we’re a passionate team devoted to helping you find the perfect luxury vehicle. We specialize in pre-owned premium cars that are certified, trusted, and thoroughly inspected.</p>
                <p>Our commitment to excellence is reflected in our service, our vehicles, and our customer satisfaction.</p>
                <p><i class="fas fa-thumbs-up text-success"></i> 100% Trusted Inventory<br /><i class="fas fa-handshake text-warning"></i> Transparent Pricing<br /><i class="fas fa-headset text-info"></i> 24/7 Customer Support</p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-md-8 text-center">
                <h3 class="mb-3 text-dark">Why Choose <span class="text-primary">FoxValleyLuxury?</span></h3>
                <p class="lead">Because you deserve more than just a car — you deserve a luxury experience.</p>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="p-4 bg-white rounded shadow-sm">
                    <i class="fas fa-award fa-3x text-primary mb-3"></i>
                    <h5>Certified Vehicles</h5>
                    <p>Every car passes our strict inspection to ensure quality and performance.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 bg-white rounded shadow-sm">
                    <i class="fas fa-tags fa-3x text-success mb-3"></i>
                    <h5>Unmatched Prices</h5>
                    <p>Luxury doesn’t have to cost a fortune. Get the best value guaranteed.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 bg-white rounded shadow-sm">
                    <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                    <h5>Customer First</h5>
                    <p>We listen, we care, and we guide you every step of the way.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section text-dark" style="background-color:#34a853;">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-10 text-center">
                <h2 class="mb-4 text-uppercase font-weight-bold">Our Mission & Vision</h2>
                <p class="lead">Driving excellence beyond the wheel.</p>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-6 mb-4">
                <div class="p-4 bg-light text-dark rounded shadow h-100">
                    <i class="fas fa-bullseye fa-3x text-primary mb-3"></i>
                    <h4 class="text-uppercase font-weight-bold mb-3">Our Mission</h4>
                    <p class="mb-0">To revolutionize the luxury car experience by delivering unmatched quality, reliability, and trust. We empower our customers with vehicles that not only elevate lifestyle but represent prestige, performance, and peace of mind.</p>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="p-4 bg-light text-dark rounded shadow h-100">
                    <i class="fas fa-eye fa-3x text-primary mb-3"></i>
                    <h4 class="text-uppercase font-weight-bold mb-3">Our Vision</h4>
                    <p class="mb-0">To become the region’s most admired luxury car brand — where innovation meets elegance, and every drive reflects distinction. We envision a future where premium is standard, and every client feels like family.</p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section bg-white">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-8 text-center">
                <h3 class="mb-4 text-dark">Our Values & Commitment</h3>
                <p class="lead">At <strong>FoxValleyLuxury</strong>, we believe in more than just selling cars. We believe in delivering excellence, trust, and a luxury experience that goes beyond the transaction.</p>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="p-4 bg-light rounded shadow-sm h-100">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h5>Integrity</h5>
                    <p>We are honest, transparent, and committed to doing what's best for our customers and our company.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 bg-light rounded shadow-sm h-100">
                    <i class="fas fa-bolt fa-3x text-warning mb-3"></i>
                    <h5>Performance</h5>
                    <p>From top-performing luxury cars to high-performance service — we deliver excellence at every step.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 bg-light rounded shadow-sm h-100">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5>Customer-Centric</h5>
                    <p>Your satisfaction is our mission. We go above and beyond to provide a personalized experience.</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-5">
            <div class="col-md-10 text-center">
                <div class="p-5 bg-primary text-white rounded">
                    <h4 class="mb-3">We're not just selling cars — we're building relationships.</h4>
                    <p class="mb-4">Explore our exclusive collection and discover why thousands trust FoxValleyLuxury as their go-to destination for luxury vehicles.</p>
                    <a href="@Url.Action("Cars", "Website")" class="btn btn-secondary px-4 py-2">Explore Cars</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-md-8 text-center">
                <h3 class="mb-3 text-dark">Visit Our Showroom</h3>
                <p class="lead">We welcome you to stop by and explore our latest luxury car collection at our showroom.</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="map-responsive rounded shadow">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2949.157568486277!2d-88.29793868453426!3d41.88980977922133!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880efeb3f541fbcd%3A0x97ef8bd0e308da33!2sFox%20Valley%20Auto%20Group!5e0!3m2!1sen!2sus!4v1719247412345!5m2!1sen!2sus" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .map-responsive {
        overflow: hidden;
        padding-bottom: 56.25%;
        position: relative;
        height: 0;
    }

        .map-responsive iframe {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            border-radius: 12px;
        }
</style>

<section class="ftco-section ftco-intro" style="background-image: url('../images/bg_3.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8">
                <h2 class="text-white mb-4">Want to drive now, pay later?</h2>
                <p class="text-white mb-4">Apply for flexible financing plans tailored to your needs.</p>
                <a href="@Url.Action("finance", "Website")" class="btn btn-outline-light btn-lg px-5">Apply for Financing</a>
            </div>
        </div>
    </div>
</section>


